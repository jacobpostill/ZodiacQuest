<style>
    *{
	font-family: sans-serif; 
}

.parent-selector{
  background-color: #eeeeee;
  border-radius: 5px;
  box-shadow: 10px 10px 10px 0px rgba(0, 0, 0, 0.2);
  padding:20px;
}

.choice-image > img{
  display: inline-block;
  margin: 10px;
  width: 64px;
  heigth: 64px;
  cursor: pointer;
}

.choice-image > img:hover{
  border: solid 2px #1e88e5;
  border-radius: 2px;
}

.choice-image > img.active{
  border: solid 2px #43a047;
  border-radius: 2px;
}

.see-choice > img{
  max-width: 128px;
  max-height: 128px;
  padding: 10px;
}


/* BUTTON */

.picker{
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  padding-top: 8px;
  padding-bottom: 8px;
  background-color: #424242;
  text-align: center;
  cursor: pointer;
  border-radius: 2px;
}
.picker:hover{
   background-color: #242424;
}
.picker:active{
   background-color: #121212;
}

.picker > span{
  color: #eeeeee
}

</style>

<div class="parent-selector">
  <div class="select-image">
    <div class="choice-image">
      <img class="active" src="./img/mirage-124.svg" alt="1"/>
      <img src="./img/mirage-star-background.svg" alt="2"/>
      <img src="./img/mirage-star-background-2.svg" alt="3"/>
    </div>
   
    <div class="picker" id="picker-confirm"><span>Confirm</span></div>
  </div>
  <div class="see-choice" style="display: none;">
    <img src=""/>
    <div class="picker" id="picker-other"><span>Other</span></div>
  </div>
</div>

