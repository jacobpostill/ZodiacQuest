<div class="d-block">
  {{> custom-phaser}}
  <div class="col-2 mx-auto my-20">
    <a id="selectSprite" href="#">Select Sprite</a>
  </div>
  <div class="col-2 mx-auto my-20">
    <a id="viewInstructions" href="#">View Instructions</a>
  </div>
</div>

<div>
  {{#if logged_in}}
    <p>Logged in as: {{user.name}}</p>
  {{/if}}
</div>

<div id="instructions-container">
  {{> instructions}}
</div>

<div id="sprites-container">
  {{> select-sprite}}
</div>

<script>
  $(document).ready(function(){
    // Initially hide the select sprite partial
    $('#sprites-container').hide();

    $("#selectSprite").click(function(event){
      event.preventDefault();
      $('#instructions-container').hide();
      $('#sprites-container').show();
    });

    $("#viewInstructions").click(function(event){
      event.preventDefault();
      $('#sprites-container').hide();
      $('#instructions-container').show();
    });
  });
</script>

