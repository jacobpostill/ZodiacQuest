<body>

    <div class="container mt-5">
    <div class="row justify-content-center mb-3">
      <div class="col-md-6">
        <div class="d-flex justify-content-between align-items-center">
           <div class="d-flex">
            <a href="/profile" class="btn btn-primary me-2">View Profile</a>
            <a href="#" id="logout" class="btn btn-primary">Logout</a>
            <script src="/js/logout.js"></script>
          </div>
          
          <div class="d-flex">
            <a href="#" id="viewInstructions" class="btn btn-outline-secondary me-2">View Instructions</a>
            <a href="#" id="selectSprite" class="btn btn-outline-secondary">Select Sprite</a>
          </div>
        </div>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-6">
        <div id="instructions-container">
          {{> instructions}}
        </div>
        <div id="sprites-container" style="display:none;">
          {{> select-sprite}}
        </div>
      </div>
    </div>

    <div class="row justify-content-center mt-5">
      <div class="col-md-6">
        {{> custom-phaser}}
      </div>
    </div>

    {{#if logged_in}}
    <div class="row justify-content-center mt-4">
      <div class="col-md-6">
        <p class="text-center">Logged in as: {{user.name}}</p>
      </div>
    </div>
    {{/if}}

  </div>

  <script>
    $(document).ready(function(){
      $("#selectSprite").click(function(event){
        event.preventDefault();
        $('#instructions-container').hide();
        $('#sprites-container').show();
      });

      $("#viewInstructions").click(function(event){
        event.preventDefault();
        $('#sprites-container').hide();
        $('#instructions-container').show();
      });
    });
  </script>
  
</body>
